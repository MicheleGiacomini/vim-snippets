global !p
from snippet_helpers import math
endglobal

# File containing misc snippet for latex math.

# Sub/Superscripts

snippet "[^ ]*\^" "^" rA
`!p snip.rv = match.group(0)`{$0}
endsnippet

snippet "[^ ]*\_" "_" rA
`!p snip.rv = match.group(0)`{$0}
endsnippet


# Parentheses, brackets, braces

snippet lp "()" wA
\left( $0 \right)
endsnippet

snippet lb "[]" wA
\left[ $0 \right]
endsnippet

snippet br "{}" wA
\left\\{ $0 \right\\}
endsnippet
